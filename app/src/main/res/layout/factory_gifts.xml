<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_gifts"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_gifts_bg_selector"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_marginTop="9dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/img_gifts"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"/>

            <ProgressBar
                android:id="@+id/pb_waitLoad"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/chat_gift_list_load"
                android:indeterminateDuration="1500"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_giftDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不服就干"
                android:textColor="#333333"
                android:includeFontPadding="false"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tv_giftsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/chat_gifts_type_shape"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="打招呼"
                android:lines="1"
                android:visibility="gone"
                android:textColor="#333333"
                android:textSize="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_flowerConsume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="$100"
            android:layout_marginBottom="12dp"
            android:textColor="#f9758b"
            android:textSize="11dp"/>

    </LinearLayout>

</LinearLayout>